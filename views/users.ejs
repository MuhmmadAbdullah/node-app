<%- include('includes/head.ejs') %>
    </head>

    <body>
        <%- include('includes/navigation.ejs') %>

            <main>
                <h1 class="myHeading">Users</h1>


                <div class="grid">
                    <% if(hasUsers===true){ %>
                        <% userData.map((user)=> { %>
                            <% const { _id, userName,userEmail,userNumber,userAddress }=user %>
                                <article class="card" id=<%=_id %>>
                                    <div class="card__image userImg">
                                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSFfkm9D1PTg4SOoBP3SwqDcV7HnC9l_UMxmA&usqp=CAU"
                                            alt="">
                                    </div>
                                    <div class="card__content">
                                        <p class="product__description">Name: <%= userName %>
                                        </p>
                                        <p class="product__description">Email: <%= userEmail %>
                                        </p>
                                        <p class="product__description">Phone No: <%= userNumber %>
                                        </p>
                                        <p class="product__description">Address: <%= userAddress %>
                                        </p>
                                    </div>
                                    <div class="card__actions">
                                        <button type="submit" class="button-82-pushable" role="button">
                                            <span class="button-82-shadow"></span>
                                            <span class="button-82-edge"></span>
                                            <span class="button-82-front text">
                                                View User
                                            </span>
                                        </button>
                                    </div>
                                </article>
                                <% }) %>

                                    <% } else{%>
                                        <h1 class="not__available">No User Added...</h1>
                                        <% }%>
                </div>

            </main>
<%- include('includes/end.ejs') %>